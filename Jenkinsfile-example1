pipeline {
  agent any
  stages {
    stage('verify installation') {
      steps {
        sh 'bru --version'
      }
    }
    stage('run all files in the collection') {
      steps {
        dir('example1') {
          sh 'bru run'
        }
      }
    }
    stage('explicityly run get') {
      steps {
        dir('example1') {
          sh '''
            bru run get.bru --output results.json
            cat results.json
          '''
        }
      }
    }
  }
}